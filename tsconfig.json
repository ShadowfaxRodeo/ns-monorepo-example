{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2017"
        ],
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "baseUrl": ".",
        "alwaysStrict": true,
        "typeRoots": [
            "types"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "types"
    ],
    "exclude": [
        "node_modules"
    ]
}